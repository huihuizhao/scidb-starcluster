[permission shim]
IP_PROTOCOL = tcp
FROM_PORT = 8080
TO_PORT = 8080

[cluster scidb]
KEYNAME = scidbkey1
CLUSTER_SIZE = 2
NODE_INSTANCE_TYPE = m3.large
SPOT_BID = 0.10
NODE_IMAGE_ID = ami-ea90dd80
PLUGINS = mpich2, scidbplugin
DISABLE_QUEUE=True
CLUSTER_USER = scidb
CLUSTER_SHELL = bash
NODE_IMAGE_ID = ami-ea90dd80
PERMISSIONS = shim
#AVAILABILITY_ZONE = us-east-1c

[plugin scidbplugin]
setup_class = scidbplugin.SciDBInstaller

# Use this plugin to change the default MPI implementation on the
# cluster from OpenMPI to MPICH2.
[plugin mpich2]
SETUP_CLASS = starcluster.plugins.mpich2.MPICH2Setup
